<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="70dp" 
    android:gravity="center_vertical"
    android:paddingTop="@dimen/padding_list_row"
    android:paddingEnd="@dimen/padding_list_row" >

	<ImageView
		android:layout_marginStart="15dp"
		android:id="@+id/Img_Avatar"
		android:scaleType="centerCrop"
		android:layout_width="52dp"
		android:layout_height="52dp"
		android:focusable="false"
		android:layout_centerVertical="true"
		android:clickable="false"
		android:src="@drawable/no_profile_image_circle" />
	<View
		android:id="@+id/ImageLastseen"
		android:layout_width="15dp"
		android:layout_height="15dp"
		android:layout_alignTop="@id/Img_Avatar"
		android:layout_marginBottom="1dp"
		android:layout_centerVertical="true"
		android:layout_marginStart="50dp"
		android:layout_below="@id/Img_Avatar"
		android:background="@drawable/icon_offline_vector" />
      
	<TextView
		android:id="@+id/Txt_Username"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:lines="1"
		android:text="test"
		android:maxWidth="220dp"
		android:layout_marginStart="4dp"
		android:drawablePadding="5dp"
		android:layout_toEndOf="@id/Img_Avatar"
		android:textSize="@dimen/msg_text_primary"
		android:textStyle="normal"
		android:clickable="false"
		android:paddingEnd="10dp"
		android:focusable="false"
		android:textFontWeight="600"
		android:textAlignment="textStart" />
     
  <TextView
    android:id="@+id/Txt_Userplatform"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:lines="1"
    android:text="@string/Lbl_DefaultAbout"
    android:layout_toEndOf="@id/Img_Avatar"
    android:layout_below="@id/Txt_Username"
    android:textColor="@color/text_color_in_between"
    android:textSize="@dimen/msg_text_secondary"
    android:layout_marginTop="4.5dp"
    android:layout_marginStart="10dp"
    android:focusable="false"
    android:paddingEnd="10dp"
    android:clickable="false"
    android:gravity="start"
    android:textAlignment="textStart" /> 
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerInParent="true"
      android:layout_marginStart="11dp"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="0dp"
      android:orientation="horizontal"
      android:id="@+id/linearLayout1"
      android:layout_gravity="center|end"
      android:gravity="center|end" >
	    <ImageView 
		    android:id="@+id/IconAudioCall"
		    android:background="@drawable/custom_ripple"
		    android:layout_height="24dp" 
		    android:layout_width="24dp"
		    android:layout_marginEnd="20dp"
		    android:tint="@color/accent" 
		    android:src="@drawable/icon_phone_vector"
		    android:gravity="center" 
		    android:layout_gravity="center" /> 
	    <ImageView
		    android:id="@+id/IconVideoCall"
		    android:background="@drawable/custom_ripple"
		    android:layout_height="24dp"
		    android:layout_width="24dp"
		    android:layout_marginEnd="7dp"
		    android:tint="@color/accent" 
		    android:src="@drawable/icon_video_camera_vector"
		    android:gravity="center" 
		    android:layout_gravity="center" />
    </LinearLayout> 
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="?attr/colorDivider"
        android:layout_below="@id/Img_Avatar" />
</RelativeLayout>